<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="StyleGrid">
        <Setter Property="Grid.Background" Value="#FFE2E2E2"/>
        <Setter Property="TextBlock.Foreground" Value="#FF2B2B2B"/>
    </Style>

    <Style TargetType="TextBox" x:Key="StyleTextBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#FF2B2B2B"/>
    </Style>

    <Style TargetType="PasswordBox" x:Key="StylePaswordBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#FF2B2B2B"/>
    </Style>

    <Style TargetType="Image" x:Name="imageStyle">
        <Setter Property="Source" Value="\Picture\BlackThemeIcon.png" />
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#FF2B2B2B"/>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#FF2B2B2B"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#FF2B2B2B"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="White"/>
    </Style>

</ResourceDictionary>